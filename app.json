{
    "runtime": {
        "arguments": "--disable-gpu-rasterization --disable-gpu-compositing",
        "version": "stable"
    },
    "shortcut": {
        "company": "OpenFin",
        "description": "Platform app seed local",
        "icon": "https://openfin.github.io/golden-prototype/favicon.ico",
        "name": "Platform app seed local"
    },
    "platform": {
        "uuid": "platform_customization_local",
        "applicationIcon": "https://openfin.github.io/golden-prototype/favicon.ico",
        "fdc3Api": false,
        "autoShow": true,
        "providerUrl": "http://localhost:5555/provider.html",
        "preloadScripts": [
            { "url": "http://localhost:5555/preload/context-api.js" }
        ],
        "contextMenu": true,
        "permissions": {
            "ExternalWindow": {
              	"wrap": true
            },
            "System": {
                "getAllExternalWindows": true,
                "launchExternalProcess": true,
                "readRegistryValue": false,
                "terminateExternalProcess": true,
                "getInstalledApps": true
            }
        },
        "defaultWindowOptions": {
            "url": "http://localhost:5555/platform-window.html",
            "contextMenu": true,
            "defaultWidth": 600,
            "defaultHeight": 600,
            "defaultLeft": 0,
            "defaultTop": 0,
            "saveWindowState": false,
            "backgroundThrottling": true,
            "minHeight": 445,
            "minWidth": 308,
            "preloadScripts": [
                { "url": "http://localhost:5555/preload/context-api.js" }
            ]
        },
        "defaultViewOptions": {
            "experimental": {
                "childWindows": true
            },
            "preloadScripts": [
                { "url": "http://localhost:5555/preload/context-api.js" }
            ],
            "permissions": {
                "ExternalWindow": {
                    "wrap": true
                }
            }
        },
        "commands": [
            {
                "command": "stack.nextTab",
                "keys": "Ctrl+Tab"
            }
        ]
    },
    "appAssets": [
        {
            "src": "http://localhost:5555/assets/OpenFinPlatformApp.zip",
            "version": "0.0.1",
            "alias": "openfin-platform-app",
            "target": "openfin-platform-app.exe",
            "forceDownload": true
        }
    ],
    "snapshot": {
        "channels": [
            { "id": "red",    "context": null },
            { "id": "yellow", "context": null }
        ],
        "windows": [
            {
                "name": "layout-window-1",
                "layout": {
                    "content": [{
                        "type": "column",
                        "content":[{
                            "type": "component",
                            "componentName": "view",
                            "componentState": {
                                "name": "my-new-test-view-1",
                                "channelId": "red",
                                "url": "http://www.example.com"
                            }
                        },{
                            "type": "component",
                            "componentName": "view",
                            "componentState": {
                                "name": "my-new-test-view-2",
                                "channelId": "yellow",
                                "url": "http://www.example.com"
                            }
                        }]
                    }]
                }
            }],
            "_windows": [{
                "name": "simple-native-window",
                "channelId": "red",
                "startInfo": {
                    "uuid": "native-app-provider",
                    "alias": "openfin-platform-app"
                }
            },
            {
                "name": "native-layout-window",
                "layout": {
                    "content": [{
                        "type": "stack",
                        "content":[{
                            "type": "component",
                            "componentName": "view",
                            "componentState": {
                                "name": "simple-native-widget",
                                "channelId": "yellow",
                                "process": {
                                    "uuid": "native-app-provider",
                                    "alias": "native-app"
                                }
                            }
                        }]
                    }]
                }
            }
        ]
    }
}
